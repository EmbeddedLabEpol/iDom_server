#include <iostream>

#define PLIK "p.jpg"
#define PLIK2 "b.jpg"
#define dl 50
#define sze 50

using namespace std;

fstream pliczek , pliczek2;
//fpos_t dlugosc;

int x = dl - 1;
int y = sze -1;



int main() {
