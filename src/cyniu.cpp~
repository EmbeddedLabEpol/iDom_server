  char tablica[sze][dl];

	for (int j=0;j<dl;++j)
	{
		for (int i=0;i<sze;++i)
		{
			if (j-25 >= (i-25)*(i-25) || i == 0 || j == 0 || i == y || j == x || i-25 >= (j-25)*(j-25) || (j==i && i < 25))
			{
			tablica[j][i]='*';
		}
		else
		{
			tablica [j][i]='.';
		}
		}
	}
//////////////////////////////////////////////////////////////////////////////
	for (int j=0; j<dl; ++j)
