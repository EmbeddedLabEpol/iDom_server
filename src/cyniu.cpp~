				  for ( int i =  0  ; i< wielkosc_pliku; ++i )
				  {
					//pliczek.seekg(i,ios_base::cur);
				    pliczek2.get(dane);
				    //tablica_plik [j] = dane;
				  
					cout << dane ;
				  }
				/*  
